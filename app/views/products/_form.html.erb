<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.fields_for :attributes do |u|%>
    <%= f.fields_for :stores do |s|%>
<div id="content">
    <div id="content-table-inner">

        <table border="0" width="100%" cellpadding="0" cellspacing="0">
        <tr valign="top">
        <td>
          <table border="0" cellpadding="0" cellspacing="0"  id="id-form">
            <tr>
              <th valign="top">Product name:</th>
              <td>
                <%= f.text_field :name %>
              </td>
              <td></td>
            </tr>
            <tr>
              <th valign="top">Product Code:</th>
              <td>
                <%= f.text_field :code %>
              </td>
            </tr>
            <tr>
              <th valign="top">Category:</th>
              <td>
                <%= u.select :category, product_categories,
                             prompt: 'Select a Category' %>
              </td>
              <td></td>
            </tr>

            <tr>
              <th valign="top">Price:</th>
              <td>
                <%= u.text_field :price %>
              </td>
              <td></td>
            </tr>

            <tr>
              <th valign="top">Size:</th>
              <td>
                <%= u.text_field :size %>
              </td>
              <td></td>
            </tr>

            <tr>
              <th valign="top">Color:</th>
              <td>
                <%= u.text_field :color %>
              </td>
              <td></td>
            </tr>

            <tr>
              <th valign="top">Quantity:</th>
              <td>
                <%= f.text_field :quantity %>
              </td>
              <td></td>
            </tr>

            <tr>
              <th valign="top">Store:</th>
              <td>
                <%= s.select :store_name, store_locations,
                             prompt: 'Select a Store' %>
              </td>
              <td></td>
            </tr>

            <tr>
              <th>Image 1:</th>
              <td><input type="file" class="file_1" /></td>
              <td>
                <div class="bubble-left"></div>
                <div class="bubble-inner">JPEG, GIF 5MB max per image</div>
                <div class="bubble-right"></div>
              </td>
            </tr>

          </table>

        </td>
      </tr>
    </table>
      <div class="actions">
        <%= f.submit %>
      </div>
    <div class="clear"></div>

</div>
</div>
<% end %>
<% end %>
<% end %>
